#turn welcome msg off
startup_message off

#first window is number 1
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

#256 color
term screen-256color
bce on

#status bar
hardstatus off
hardstatus alwayslastline
hardstatus alwayslastline '%{= G}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}][ %{y}Load: %l %{g}][%{B}%Y-%m-%d %{W}%c:%s %{g}]'

#allow scrolling
termcapinfo xterm*|rxvt*|kterm*|Eterm* ti@:te@

#clear after fullscreen application
altscreen on
